{% extends 'base.html.twig' %}

{% block title %}Ajouter un film{% endblock %}

{% block body %}
    <h1>Ajouter un film</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.image) }}
        {{ form_row(form.kinds) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Ajouter le film
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'Ajouter et créer de nouveau', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_movie_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Retour à la liste des films
        </a>
    {{ form_end(form) }}
{% endblock %}
